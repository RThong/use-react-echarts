{
  "compilerOptions": {
    "jsx": "react-jsx",
    "sourceMap": true,
    "target": "es5",
    "strict": true,
    "outDir": "lib",
    "declaration": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "lib": ["esnext", "dom"],
    "removeComments": true
  },
  "include": ["src/use-react-echarts/*.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
